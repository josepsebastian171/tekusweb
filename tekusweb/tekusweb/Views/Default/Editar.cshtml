@model Model.cliente
@{
    ViewBag.Title = (Model.id > 0 ? Model.nombre : "Nuevo cliente");
    Layout = "~/Views/Shared/Layout.cshtml";
}


<ol class="breadcrumb">
    <li><a href="~/">Clientes</a></li>
    <li class="active">@(Model.id > 0 ? Model.nombre : "Nuevo cliente")</li>
</ol>

@using (Html.BeginForm("Salvar", "Default", FormMethod.Post, new { id = "frm-cliente" }))
{
    @Html.HiddenFor(x => x.id)
    <div class="panel panel-default">
        <div class="panel-heading">Información del cliente</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(x => x.nombre)
                @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.correo)
                @Html.TextBoxFor(x => x.correo, new { @class = "form-control" })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(x => x.nit)
                @Html.TextBoxFor(x => x.nit, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
}